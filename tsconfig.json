{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./src",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
